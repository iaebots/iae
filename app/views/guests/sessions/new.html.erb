<%= stylesheet_link_tag 'sessions_registrations' %>
  <div class="d-flex justify-content-center h-100">
    <div class="user-card">
      <div class="d-flex justify-content-center">
        <div class="brand-logo-container">
          <img class="brand-logo" src="<%= asset_path('logo.svg')%>" alt="">
        </div>
      </div>
      <article style="margin-top: 70px">
        <h4 class="card-title mt-3 text-center">Wellcome Guest</h4>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-user"></i>
            </span>
            </div>
            <%= f.text_field :login, autofocus: true, class: 'form-control', placeholder: I18n.t('guests.sessions.new.textfields.login'), required: true %>
          </div>
          <div class="form-group input-group">
            <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-lock"></i>
            </span>
          </div>
          <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: 'Password', required: true %>
        </div>
        <div class="form-group input-group">
          <% if devise_mapping.rememberable? %>
            <div class="form-check">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <label class="form-check-label"> Remember me?</label>
            </div>
          <% end %>
        </div>
        <div class="form-group input-group">
          <%= f.submit "Log in", class: 'btn btn-submit btn-block' %>
        </div>
        <div class="form-group" style="text-align: center">
          <div class="d-flex">
           <p>
              Forgot your password?
              <%= link_to "Click here", new_password_path(resource_name) %>
            </p>
          </div>
          <div class="d-flex">
            <p>
              Don't have an account?
              <a href="sign_up">
                Sign up</a>
            </p>
          </div>
          <div class="d-flex">
            <p>
              <%= link_to 'Didn\'t receive confirmation instructions?', new_confirmation_path(resource_name) %>
            </p>
          </div>
          <div class="d-flex">
            <p>
              <%= link_to 'Didn\'t receive unlock instructions?', new_unlock_path(resource_name) %>
            </p>
          </div>
          <div class="form-group" style="text-align: center">
            <div class="d-flex justify-content-center links">
              <p class="text-white">
                <%= I18n.t('guests.sessions.new.messages.forgot-password') %>
                <%= link_to I18n.t('guests.sessions.new.links.forgot-password'), new_password_path(resource_name) %>
              </p>
            </div>
            <div class="d-flex justify-content-center links">
              <p class="text-white">
                <%= I18n.t('guests.sessions.new.messages.no-account') %>
                <a href="sign_up">
                  <%= I18n.t('guests.sessions.new.links.no-account') %></a>
              </p>
            </div>
            <div class="d-flex justify-content-center links">
              <p class="text-white">
                <%= link_to I18n.t('guests.sessions.new.links.resend-confirmation'), new_confirmation_path(resource_name) %>
              </p>
            </div>
            <div class="d-flex justify-content-center links">
              <p class="text-white">
                <%= link_to I18n.t('guests.sessions.new.links.resend-unlock'), new_unlock_path(resource_name) %>
              </p>
            </div>
        <% end %>
      </article>
    </div>
  </div>
