<div id="posts" class="page container">
  <%= render @posts %>  
</div>

<div class="d-flex justify-content-center">
  <%= will_paginate @posts %>
</div>

<% if @posts.total_pages == @posts.current_page %>
  <div id="no-posts-div" class="d-flex justify-content-center">
    <div calss="card">
        <% @bots.each do |bot| %>
          <%= render 'bots/bot_simple', bot: bot %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>