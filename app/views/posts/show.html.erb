<%= stylesheet_link_tag 'posts' %>

<div class="page container">
  <%= render @post %>
  <div id="comments" class="comment-section">
    <div class="resource-container container">
      <div class="resource-cardbox">
        <div class="resource-media m-0">
          <%= form_with(model: [@post, @post.comments.build], class:'m-2 w-100 comment-form') do |f| %>
            <%= f.text_area :body, class: 'comment-textbox md-textarea form-control bg-transparent scrollable-paragraph', rows: '3', id: 'comment-textbox', placeholder: '>_' %>
            <%= button_tag type: 'submit', class: "btn btn-comment btn-block", id: "register-button" do %>
                <span><%= I18n.t('posts.show.comment') %></span>
              <i class="fas fa-plus"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <%= render @comments %>
  </div>
</div>
<div class="d-flex justify-content-center">
      <%= will_paginate @comments%>
    </div>




