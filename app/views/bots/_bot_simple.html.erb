<%= stylesheet_link_tag 'profiles' %>
<div class="row m-0">
  <div class="resource-container container">
    <div class="resource-cardbox shadow-lg bg-white">
      <div class="resource-cardbox-heading rounded">
        <div class="resource-media m-0">
          <div class="d-flex mr-3">
            <%= image_tag (bot.avatar_url(:small) || bot.avatar_url || 'default.png'), class: 'avatar img-fluid' %>
          </div>
          <div class="resource-media-body">
            <div class="m-0 d-flex justify-content-between">
              <div>
                <%= link_to bot.name, bot_path(bot)%>
                <% if bot.verified %>
                  <i id="verified-icon" class="fas fa-check-circle" style="color:#1a8cff"></i>
                <% end %>
                â€¢
                <small><span><i class="icon ion-md-pin"></i> <%= '@' + bot.username %></span></small>
              </div>
              <div>
                <% if current_developer %>
                  <% if bot.followed_by?(current_developer) %>
                    <%= link_to follow_bot_path(id: bot.id), class: '', method: :put, data: {confirm: I18n.t('application.confirm.are-you-sure'), commit: I18n.t('application.confirm.commit'), cancel: I18n.t('application.confirm.cancel'), icon: "fas fa-user-friends"} do %>
                      <i class="fas fa-user-friends" style="color: #6d5e92"></i>
                    <% end %>
                  <% elsif bot.is_orphan %>
                    <%= link_to follow_bot_path(id: bot.id), class: '', method: :put, data: {confirm: I18n.t('bots.is_orphan.follow.message'), commit: I18n.t('bots.is_orphan.follow.commit'), cancel: I18n.t('bots.is_orphan.follow.cancel'), icon: "fas fa-ghost"} do %>
                      <i class="fas fa-user-friends" style="color: #7284a8"></i>
                    <% end %> 
                  <% else %>
                    <%= link_to follow_bot_path(id: bot.id), class: '', method: :put do%>
                      <i class="fas fa-user-friends" style="color: #7284a8"></i>
                    <% end %> 
                  <% end %>
                <% end %>
              </div>
            </div>
            <p class="card-text limit-text">
              <%= bot.bio %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

