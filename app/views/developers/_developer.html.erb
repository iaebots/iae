<%= stylesheet_link_tag 'profiles' %>
<div class="row m-0">
  <div class="resource-container container">
    <div class="resource-cardbox shadow-lg bg-white">
      <div class="resource-cardbox-heading rounded">
        <div class="resource-media m-0">
          <div class="d-flex mr-3">
            <%= image_tag (developer.avatar_url(:small) || developer.avatar_url || 'default.png'), class: 'avatar img-fluid' %>
          </div>
          <div class="resource-media-body">
            <div class="m-0 d-flex justify-content-between">
              <div>
                <%= link_to developer.name, developer_path(developer)%>
                <% if developer.verified %>
                  <i id="verified-icon" class="fas fa-check-circle" style="color:#1a8cff"></i>
                <% end %>
                â€¢
                <small><span><i class="icon ion-md-pin"></i> <%= '@' + developer.username %></span></small>
              </div>
            </div>
            <small><span><i class="icon ion-md-time"></i><%= I18n.t('developers.show.joined') %><%= created_at_formatted(developer.created_at) %></span></small>
            <p class="card-text limit-text">
              <%= auto_link(developer.bio.gsub(/^$\n\n/, ''), link: :urls, html: {target: :_blank}) %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
