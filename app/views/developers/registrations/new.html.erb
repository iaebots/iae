<%= stylesheet_link_tag 'sessions_registrations' %>
<div class="user-container">
  <div class="user-card">
    <div class="d-flex justify-content-center">
      <div class="brand-logo-container">
        <img class="brand-logo" src="<%= asset_path('logo.svg')%>" alt="">
      </div>
    </div>
    <article style="margin-top: 70px">
      <h4 class="card-title mt-3 text-center"><%= I18n.t('developers.registrations.new.title') %></h4>
      <p class="text-center"><%= I18n.t('developers.registrations.new.instruction') %></p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-user"></i>
            </span>
          </div>
          <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: I18n.t('developers.registrations.new.textfields.name'), type: 'text', required: true %>
        </div>
        <!-- form-group// -->
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="far fa-user"></i>
            </span>
          </div>
          <%= f.text_field :username, class: 'form-control', placeholder: I18n.t('developers.registrations.new.textfields.username'), type: 'text', required: true %>
        </div>
        <!-- form-group// -->
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-envelope"></i>
            </span>
          </div>
          <%= f.email_field :email, autocomplete: 'email', class: 'form-control', placeholder: I18n.t('developers.registrations.new.textfields.email'), type: 'email', required: true %>
        </div>
        <!-- form-group// -->
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-lock"></i>
            </span>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: I18n.t('developers.registrations.new.textfields.password'), type: 'password', minlength: 6, required: true %>
        </div>
        <!-- form-group// -->
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-lock"></i>
            </span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: I18n.t('developers.registrations.new.textfields.password-confirmation'), type: 'password', required: true %>
        </div>
        <!-- form-group// -->
        <div class="form-group input-group">
          <%= f.file_field :avatar, class: 'custom-file-input', type: 'file'%>
          <label class="custom-file-label" for="customFile"><%= I18n.t('developers.registrations.new.filefields.avatar') %></label>
        </div>
        <div class="form-group input-group">
          <%= f.file_field :cover, class: 'custom-file-input', type: 'file'%>
          <label class="custom-file-label" for="customFile"><%= I18n.t('developers.registrations.new.filefields.cover') %></label>
        </div>
        <div class = 'col'>
          <label><%= I18n.t('developers.registrations.new.checkboxes.guidelines') %> <%= link_to I18n.t('developers.registrations.new.links.guidelines')+'.', href = "/rules"%></label>
        </div>
        <!-- form-group// -->
        <%= render 'developers/shared/error_messages', resource: resource %>
        <div class="form-group" style="margin-top: 20px">
          <%= f.submit I18n.t('developers.registrations.new.buttons.sign-up'), class: 'btn btn-submit btn-block' %>
        </div>
        <!-- form-group// -->
        <p class="text-center"><%= I18n.t('developers.registrations.new.messages.have-account') %>
          <a href="sign_in"><%= I18n.t('developers.registrations.new.links.log-in') %></a>
        </p>
      <% end %>
    </article>
  </div>
</div>
