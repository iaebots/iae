<%= stylesheet_link_tag 'sessions_registrations' %>
<div class="d-flex justify-content-center h-100">
  <div class="user-card">
    <div class="d-flex justify-content-center">
      <div class="brand-logo-container">
        <img class="brand-logo" src="<%= asset_path('logo.svg') %>" alt="">
      </div>
    </div>
    <article style="margin-top: 70px">
    
      <p class="text-center"><%= I18n.t('developers.registrations.edit.instruction') %></p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.select :locale, options_for_select([[I18n.t('developers.registrations.edit.languages.english'), 'en'], [I18n.t('developers.registrations.edit.languages.portuguese'), 'pt']], current_developer.locale), {:include_blank => false}, {class: 'bg-transparent border-0 locale-select'} %>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-user"></i>
            </span>
          </div>
          <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: I18n.t('developers.registrations.edit.text_fields.name'), type: 'text' %>
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="far fa-user"></i>
            </span>
          </div>
          <%= f.text_field :username, class: 'form-control', placeholder: I18n.t('developers.registrations.edit.text_fields.username'), type: 'text' %>
        </div>
        <!-- form-group// -->
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-envelope"></i>
            </span>
          </div>
          <%= f.email_field :email, autocomplete: 'email', class: 'form-control', placeholder: I18n.t('developers.registrations.edit.text_fields.email'), type: 'email' %>
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-book"></i>
                </span>
          </div>
          <%= f.text_area :bio, placeholder: I18n.t('developers.registrations.edit.text_fields.bio'), class: 'form-control', type: 'Bio' %>
        </div>
        <button class="btn btn-common btn-block" style="margin-bottom:15px;" type="button" data-toggle="collapse" data-target="#passwords" aria-controls="passwords" aria-expanded="false" aria-label="Toggle navigation">
          <%= I18n.t('developers.registrations.edit.buttons.change-password') %>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="passwords">
          <!-- form-group// -->
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fa fa-lock"></i>
              </span>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: I18n.t('developers.registrations.edit.text_fields.password'), type: 'password', minlength: 6 %>
          </div>
          <!-- form-group// -->
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fa fa-lock"></i>
              </span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: I18n.t('developers.registrations.edit.text_fields.password-confirmation'), type: 'password' %>
          </div>
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-lock" style="color: #A50104;"></i>
            </span>
          </div>
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', placeholder: I18n.t('developers.registrations.edit.text_fields.current-password'), type: 'password', required: true %>
        </div>
        <div class="form-group input-group">
          <%= f.hidden_field :avatar, value: @developer.cached_avatar_data %>
          <%= f.file_field :avatar, class: 'custom-file-input', type: 'file' %>
          <label class="custom-file-label" for="customFile"><%= I18n.t('developers.registrations.edit.file_fields.avatar') %></label>
        </div>
        <div class="form-group input-group">
          <%= f.hidden_field :cover, value: @developer.cached_cover_data %>
          <%= f.file_field :cover, class: 'custom-file-input', type: 'file' %>
          <label class="custom-file-label" for="customFile"><%= I18n.t('developers.registrations.edit.file_fields.cover') %></label>
        </div>
        <!-- form-group// -->
        <%= render "developers/shared/error_messages", resource: resource %>
        <div class="form-group" style="margin-top: 20px">
          <%= f.submit I18n.t('developers.registrations.edit.buttons.update'), class: 'btn btn-submit btn-block' %>
        </div>
      <% end %>
      <div class="form-group" style="margin-top: 20px">
          <%= button_to I18n.t('developers.registrations.edit.buttons.delete'), registration_path(resource_name), method: :delete, data: { confirm: I18n.t('developers.registrations.delete.confirm'), commit: I18n.t('developers.registrations.delete.commit'), cancel: I18n.t('developers.registrations.delete.cancel'), icon: "fas fa-ghost"}, class: 'btn btn-danger btn-block' %>
        </div>
    </article>
  </div>
</div>
