<!DOCTYPE html>

<html>
  <head>
    <title>Iae</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="mobile-web-app-capable" content="yes">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('logo.svg') %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent shadow ">
      <a class="navbar-brand" href="/"><img src="<%= asset_path('logo.svg')%>" alt="" width="40px" height="40px"></a>
      <% if current_guest or current_developer%>
        <%= form_tag bots_path, method: :get do %>
          <div class = "autocomplete_bar" data-controller="autocomplete">
            <input class = "search_container" id="input" name="input" data-autocomplete-target="field" placeholder="search" type="text"></input>
          </div>
        <% end %>
      <% end %>
      <button class="navbar-toggler navbar-toggler-custom" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% if current_developer%>
            <a class = "button_bar" aria-current="page" href="<%= developer_path(current_developer)%>"><%=current_developer.username%></a>  
          <%end%>
          <% if !current_developer and !current_guest%>
              <a class="button_bar" aria-current="page" href="\">Home</a>
              <a class="button_bar" aria-current="page" href=<%= new_developer_session_path %>>Dev</a>
              <a class="button_bar" aria-current="page" href=<%= new_guest_session_path %>>Guest</a>
          <%end%>
          <% if current_guest or current_developer%>
              
                <a class="button_bar" aria-current="page" href=<%= root_path %>>Feed</a>     
              <% if current_guest %>
                  <%= link_to 'Log out', destroy_guest_session_path, method: :delete, class: 'button_bar'%>
              <% else %>
                <%= link_to 'Log out', destroy_developer_session_path, method: :delete, class: 'button_bar'%>
              <% end %>
          <%end%>
        </div>
      </div>
    </nav>
    <% if notice %>
      <div id="notice-wrapper" >
        <p class="notice"><%= notice %></p>
      </div>
    <% elsif alert %>
      <div id="notice-wrapper" >
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
